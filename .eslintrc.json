{
  "plugins": ["prettier"],
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "eslint:recommended",
    "eslint-config-prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "no-undef": "off"
  },
  "ignorePatterns": ["/components/ui/*.tsx"]
}
